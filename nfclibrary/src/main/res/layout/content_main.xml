<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/devicename"
         android:hint="Device Name"
         />

    <Button
        android:id="@+id/main_button_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouvrir"></Button>

    <EditText
        android:id="@+id/code_permanent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Code permanent"/>
    <EditText
        android:id="@+id/code_classe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Code classe"/>
    <EditText
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wallet"/>
    <EditText
        android:id="@+id/pin_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pin wallet"/>
    <EditText
        android:id="@+id/code_annee_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Code année Ref"/>
    <EditText
        android:id="@+id/date_prochain_paiement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date prochain paiement"/>
    <EditText
        android:id="@+id/numero_carte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero carte"/>

    <Button
        android:id="@+id/ecrire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ecrire"></Button>

    <Button
        android:id="@+id/lire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lire"></Button>

    <TextView
        android:id="@+id/lire_code_permanent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Code permanent"/>

        <TextView
            android:id="@+id/lire_code_classe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code Classe"/>
        <TextView
            android:id="@+id/lire_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wallet"/>

        <TextView
            android:id="@+id/lire_pin_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pin Wallet"/>

        <TextView
            android:id="@+id/lire_code_annee_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code année ref"/>
        <TextView
            android:id="@+id/lire_date_prochain_paiement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date procahin paiement"/>
        <TextView
            android:id="@+id/lire_numero_carte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro carte"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
